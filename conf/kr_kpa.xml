<root>
	<baseroot>
		<basedir class="KR">F:\KR_unzip\摘要
		</basedir>
		<destdir>F:\解析结果\KPA</destdir>
	</baseroot>

	<branch>
		<FileSearcher>
			<!-- 多组文件分割使用"|" -->
			<!-- 判断是相对路径还是绝对路径。如果是相对路径，则追加到basedir;否则直接使用该路径 -->
			<AddPath class="KR"></AddPath>
			<!-- <filter> '&'表示同时满足的条件,多层查找; '*'表示包含任意一个即可的条件 <incdir>DOC</incdir> 
				排除列表，用*分割,表示或的关系 <excdir></excdir> 包含文件列表，用*分割,表示或的关系 <incfile></incfile> 
				排除文件列表，用*分割，表示排除列表中所有内容 <excfile></excfile> 包含的扩展名列表，用*分割，表示或的关系 <extend>xml</extend> 
				,输出为csv文件 <outfile>kr_abs_xml.csv</outfile> </filter> -->
			<filter>
				<!-- '&'表示同时满足的条件,多层查找; '*'表示包含任意一个即可的条件 -->
				<incdir>DOC</incdir>
				<!-- 排除列表，用*分割,表示或的关系 -->
				<excdir></excdir>
				<!-- 包含文件列表，用*分割,表示或的关系 -->
				<incfile></incfile>
				<!-- 排除文件列表，用*分割，表示排除列表中所有内容 -->
				<excfile></excfile>
				<!-- 包含的扩展名列表，用*分割，表示或的关系 -->
				<extend>nrm</extend>
				<!-- ,输出为csv文件 -->
				<outfile>kr_abs_nrm.csv</outfile>
			</filter>
		</FileSearcher>
		<TextReader>
			<filetype>xml</filetype>
			<header>B110,B240,B210,B220,B130,B542,P,path
			</header>
			<encoding-in>UTF-8</encoding-in>
			<encoding-out>UTF-8</encoding-out>
			<!-- 使用"*"进行分隔 -->
			<rootnode>kr-patent-document</rootnode>
			<textnodes>SDOBI>B100>B110*SDOBI>B200>B240>date*SDOBI>B200>B210*SDOBI>B200>B220>date*SDOBI>B100>B130*SDOBI>B500>B540>B542
			</textnodes>
			<existnodes>abstract>p
			</existnodes>
		</TextReader>
		<TextReader>
			<filetype>nrm</filetype>
			<header>B110,B140,B210,B220,B130,B542,P,path
			</header>
			<encoding-in>UTF-8</encoding-in>
			<encoding-out>UTF-8</encoding-out>
			<!-- 使用";"进行分隔 -->
			<rootnode>PATDOC>KRPAT</rootnode>
			<textnodes>SDOBI>B110*SDOBI>B140*SDOBI>B210*SDOBI>B220*SDOBI>B130*SDOBI>B542
			</textnodes>
			<existnodes>SDOAB>SEC>P
			</existnodes>
		</TextReader>
	</branch>
</root>
